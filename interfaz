    public void tablaResultado(){
        Object[][] matriz = new Object [tokenslist.size()][2];
        for(int i =0; i<tokenslist.size();i++){
            matriz[i][0] = tokenslist.get(i).nombre;
            matriz[i][1] = tokenslist.get(i).Identificador;
        }
        jTable1.setModel(new javax.swing.table.DefaultTableModel(matriz,
            new String [] {
                "Nombre", "TOKEN"
        }
        ));
     }
    public void ArchivoLexico() throws IOException{
        int contadorID=0;
        tokenslist = new LinkedList<identificador>();
        File fichero = new File ("fichero.txt");
        PrintWriter writer;
        try {
            writer = new PrintWriter(fichero);
            writer.close();
        } catch (FileNotFoundException ex) {
            Logger.getLogger(interfaslexica.class.getName()).log(Level.SEVERE, null, ex);
        }
        Reader reader = new BufferedReader(new FileReader("fichero.txt"));
        Lexico lexico = new Lexico (reader);
        String resultado="";
        while (true){
            Tokens tokens =lexico.yylex();
            if (tokens == null){
                for(int i=0;i<tokenslist.size();i++){
                    System.out.println(tokenslist.get(i).nombre + "=" + tokenslist.get(i).Identificador);
                }
                //.setText(resultado);
                return;
            }
            switch (tokens){
                case Operador_de_asignacion:
                    resultado=resultado;
                    break;
                case Operador:
                    resultado=resultado;
                    break;
                case Error:
                    resultado=resultado+ "Error, simbolo no reconocido ";
                    break;
                case Identificador: {
                    contadorID++;
                    identificador tokenitem=new identificador();
                    tokenitem.nombre=lexico.lexema;
                    tokenitem.Identificador =contadorID;
                    tokenslist.add(tokenitem);
                    resultado=resultado+ "<ID" + contadorID + "> ";
                    break;
                }
                case Numero:
                    resultado=resultado+ "< " + lexico.lexema + "> ";
                    break;
                default:
                    resultado=resultado+ "<"+ lexico.lexema + "> ";
            }
    }
    }

